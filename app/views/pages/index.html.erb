<!-- Testimonials Section -->
<section id="testimonios" data-controller="swiper" class="container mx-auto relative flex flex-col gap-4  mt-12">
  <h2 class="text-3xl font-bold text-slate-400 text-center">Testimonios</h2>
  <!-- Tarjeta de Testimonio -->
  <div data-swiper-target="container" class="overflow-hidden w-5/6 mx-auto">
    <div class="swiper-wrapper h-full flex">
      <% @users.each do |user| %>
        <div class="swiper-slide px-4 flex-grow">
          <div class="flex items-center px-6 py-3 bg-gray-900 border border-transparent rounded-t-xl">
              <h1 class="mx-3 text-white font-semibold text-lg"> <%= user[:title] %></h1>
          </div>

          <div class="p-6 bg-emerald-950 border border-transparent rounded-b-xl shadowlg shadow-emerald-900">
            <div class="flex items-center">
              <img class="h-10 w-10 rounded-full" src="<%= user[:avatar] %>" alt="perfil">
              <div class="ml-3">
                <p class="text-green-200 text-lg font-semibold"><%= user[:author] %></p>

                <!-- Valoraci칩n con estrellas -->
                <div class="flex">
                  <% user[:stars].times do %>
                    <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 24 24"><path d="M12 .587l3.668 7.429 8.332 1.214-6.026 5.884 1.426 8.31L12 18.897l-7.4 4.527 1.426-8.31-6.026-5.884 8.332-1.214z"/></svg>
                  <% end %>
                </div>
              </div>
            </div>

            <p class="mt-3 text-green-700 text-sm"><%= user[:comment] %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <!-- Add Navigation -->
  <div data-swiper-target="prev" class="swiper-button-next"></div>
  <div data-swiper-target="next" class="swiper-button-prev"></div>
</section>


