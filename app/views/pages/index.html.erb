
<section id="portada" class="bg-fixed w-full h-screen bg-no-repeat" style="background-image: url(<%= asset_path 'content/dalle-militar.png' %>);background-size: cover;">
  <div id="suscribe" class="suscribe w-full h-full flex flex-col justify-center items-center relative">
    <div class="w-full xl:w-2/5 flex flex-col justify-center items-center bg-emerald-950 p-14 border border-transparent rounded-xl">
      <% if current_user.admin? %>
        <%= form_with(model: @info, class: 'bg-transparent opacity-100') do |form|%>
          <%= form.text_field :main_title, value: @info.secondary_title, class: 'w-full text-5xl font-bold text-emerald-400 text-center' %>
          <%= form.text_field :main_subtitle, value: @info.secondary_subtitle, class: 'w-full text-3xl font-bold text-emerald-400 text-center' %>
          <%= form.submit "Actualizar", class: 'text-white bg-blue-500 rounded-xl px-4 py-2' %>
        <% end %>
      <% else %>
        <h1 class="text-5xl font-bold text-emerald-400 text-center"><%= @info.main_title%></h1>
        <h2 class="text-3xl font-bold text-emerald-400 text-center"><%= @info.main_subtitle%></h2>
      <% end %>
      <div class="w-full mt-8 flex flex-col xl:flex-row justify-center items-center gap-12">

          <%= link_to '#', class: " flex justify-start items-start gap-8 hover:scale-125 transition-all ease-in-out duration-500" do %>
            <%= image_tag('content/military-right.png', class: 'w-32') %>
            <span class="w-fit h-12 mt-4 py-2 px-8 border border-blue-600 hover:bg-blue-600 text-blue-600 hover:text-white rounded-xl">Suscribe</span>
          <% end %>

          <%= link_to '#nosotros', class: " flex justify-start items-start gap-8 hover:scale-125 transition-all ease-in-out duration-500" do %>
            <span class="w-fit h-12 mt-4 py-2 px-8 border border-blue-600 hover:bg-blue-600 text-blue-600 hover:text-white rounded-xl">Saber m치s</span>
            <%= image_tag('content/military-right.png', class: 'w-32 transform scale-x-[-1]') %>
          <% end %>

      </div>
    </div>
  </div>
</section>
<!-- About Us Section -->
<section id="nosotros" class="container mx-auto p-12 text-center my-12">
    <h2 class="text-3xl font-bold text-slate-400">Sobre nosotros</h2>

    <% if current_user.admin? %>
      <%= form_with(model: @info, local: true, class: 'mt-4 text-green-200 text-lg p-8 bg-teal-700 rounded-xl shadow-teal-800') do |form| %>
        <%= form.text_area :about, value: @info.about, class: 'w-full min-h-24 bg-transparent' %>

        <%= form.submit "Actualizar", class: 'text-white bg-blue-500 rounded-xl px-4 py-2' %>

      <% end %>
    <% else %>
      <p class="mt-4 text-green-200 text-lg p-8 bg-teal-700 rounded-xl shadow-teal-800"><%= @info.about %></p>
    <% end %>
    
</section>

