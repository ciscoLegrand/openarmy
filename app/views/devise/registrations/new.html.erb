<div class="container mx-auto flex flex-col justify-center items-center min-h-screen">
  <div class="w-3/5 p-8 flex flex-col justify-center items-center gap-8 border border-transparent bg-emerald-950 shadow-lg shadow-teal-900 rounded-xl">
    <h2 class="text-gray-600">Sign up</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "mt-8" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mx-auto max-w-2xl">
        <div class="py-2">
          <%= f.label :email, class: "px-1 text-sm text-gray-600" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "text-md text-gray-300 block px-3 py-2 rounded-lg w-full bg-gray-900 border-2 border-transparent focus:outline-none focus:border-gray-600" %>
        </div>

        <div class="py-2">
          <%= f.label :password, class: "px-1 text-sm text-gray-600" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "text-md text-gray-300 block px-3 py-2 rounded-lg w-full bg-gray-900 border-2 border-transparent focus:outline-none focus:border-gray-600" %>
        </div>

        <div class="py-2">
          <%= f.label :password_confirmation, class: "px-1 text-sm text-gray-600" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "text-md text-gray-300 block px-3 py-2 rounded-lg w-full bg-gray-900 border-2 border-transparent focus:outline-none focus:border-gray-600" %>
        </div>

        <div class="py-2 flex justify-start items-center gap-4">
          <%= f.submit "Registro", class: "bg-gray-900 text-gray-100 px-5 py-2 rounded-lg hover:bg-gray-800" %>
          <%= link_to "login", new_user_session_path, class: 'bg-gray-900 text-gray-100 px-5 py-2 rounded-lg hover:bg-gray-800' %>
        </div>
      </div>
    <% end %>
  </div>
</div>