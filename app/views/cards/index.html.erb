<div class="container mt-32 mx-auto">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="w-full flex justify-between items-center gap-5">
    <h1 class=" font-bold text-4xl">Cards</h1>
    <%= link_to "New card", new_card_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <%= turbo_frame_tag :cards do %>
    <section id="programas"  class="container mx-auto p-12 text-center my-12">
      <h2 class="text-3xl font-bold text-slate-400">Programas Ofrecidos</h2>
      <article class="mt-8 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <%= render @cards %>
      </article>
    </section>
  <% end %>
</div>
