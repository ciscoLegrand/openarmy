<%= turbo_frame_tag "card_#{card.id}" do %>
  <div id="<%= dom_id card %>" class="bg-emerald-950 rounded-xl shadow-lg shadow-emerald-900 p-6 flex flex-col gap-5 h-[22rem]">
    <h3 class="text-2xl font-semibold text-green-200"><%= card.title %></h3>
    <p class="my-2 text-green-600"><%= card.description.truncate(300) %></p>
  </div>
  <%= link_to 'Más información', '#contacto', data: { turbo_frame: '_top'}, class: 'mt-8 inline-block bg-green-500 text-white py-2 px-4 rounded shadow-lg shadow-emerald-900' %>
<% end %>

